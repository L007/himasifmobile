<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_animation"
    tools:context="com.example.brianr.himasifmobile.Aspirasi"
    android:id="@+id/layout">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/himasif1"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASPIRASI"
        android:textSize="60dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"/>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_below="@+id/title"
        android:layout_width="550dp"
        android:layout_height="600dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:background="@drawable/shape">
        <Spinner
            android:layout_marginTop="30dp"
            android:id="@+id/kategori"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

        </Spinner>
        <Spinner
            android:layout_marginTop="30dp"
            android:id="@+id/jenis_aspirasi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/kategori">

        </Spinner>

        <EditText
            android:layout_below="@id/jenis_aspirasi"
            android:id="@+id/aspirasi"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="#ecf0f1" />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="KIRIM"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_below="@id/aspirasi"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/kirim"/>
    </RelativeLayout>

</RelativeLayout>
