<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_animation"
    tools:context=".ResultRandom">

    <ImageView
        android:id="@+id/himasif"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="23dp"
        android:background="@mipmap/himasif1" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="50dp"
        android:text="HASIL RANDOM"
        android:textColor="#FFF"
        android:textSize="50dp" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/himasif"
        android:layout_marginTop="10dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20dp" />


            <Button
                android:id="@+id/re_random"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textView"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:text="Re-random"
                android:textColor="#FFF"
                android:textSize="27dp" />

            <Button
                android:id="@+id/share_but"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:text="Share"
                android:textColor="#FFF"
                android:textSize="27dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
