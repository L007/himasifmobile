<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisiMisi">
    <include layout="@layout/app_bar_layout" android:id="@+id/appBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingMultiplier="1.2"
                android:text="VISI HIMASIF"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingMultiplier="1.2"
                android:text="Tercapainya pendidikan yang kompeten terutama dibidang IPTEK yang didasari tanggung jawab dan sikap profesionalisme serta menjadi sarana untuk mengambangkan potensi diri mahasiswa."
                android:textAlignment="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingMultiplier="1.2"
                android:text="MISI HIMASIF"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="230dp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingMultiplier="1.2"
                android:text="\n1. Mengadakan kegiatan yang bertujuan untuk mengembangkan IPTEK
            \n2. Meningkatkan kualitas sumberdaya manusia di bidang akademis,kewirausahaan,dan keprofesian
            \n3. Memperkenalkan Program Studi Sistem Informasi di lingkungan masyarakat luas
            \n4. Menjalin hubungan dan kerjasama atas dasar kekeluargaan dengan organisasi di dalam atau di luar Program Studi Sistem Informasi
            \n5. Melaksanakan setiap kegiatan dengan berlandaskan kedisiplinan dan Kekonsistenan
            \n6. Mempererat tali persaudaraan antar mahasiswa khususnya anggota HIMASIF"
                android:textColor="#000000" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
