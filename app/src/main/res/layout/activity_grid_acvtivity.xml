<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brianr.himasifmobile.GridAcvtivity"
    android:background="@drawable/bg_animation"
    android:id="@+id/layout">
    <ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="23dp"
    android:background="@mipmap/himasif1"
        android:id="@+id/imageView2" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIMASIF TODAY"
        android:textSize="25dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFF"/>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="480dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="judul
asd"
                    android:textColor="#000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/sumber"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/judul"
                    android:text="sumber" />

                <TextView
                    android:id="@+id/tanggalTerbit"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/sumber"
                    android:text="tanggal" />

                <Button
                    android:id="@+id/whatsapp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tanggalTerbit"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle_wa" />

                <Button
                    android:id="@+id/line"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tanggalTerbit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/whatsapp"
                    android:background="@drawable/circle_wa" />

                <Button
                    android:id="@+id/facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tanggalTerbit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/line"
                    android:background="@drawable/circle_fb" />

                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tanggalTerbit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/facebook"
                    android:text="Share" />
                <!--<ImageView
                    android:id="@+id/gambar"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/whastapp"/>-->
                <WebView
                    android:id="@+id/isi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/whatsapp"
                    android:layout_marginTop="10dp"
                    android:scrollbars="vertical"></WebView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
